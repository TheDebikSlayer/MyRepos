<Window x:Class="AirConditioner.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirConditioner"
        mc:Ignorable="d"
        Title="Авторизация" Height="180" Width="300">
    <Grid>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="280" Height="30"/>
        <Button Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="80" Margin="0,90,0,0" />
        <PasswordBox x:Name="pbPass" HorizontalAlignment="Center" VerticalAlignment="Top" Width="280" Height="30" Margin="0,50,0,0" Password="pass"/>
    </Grid>
</Window>
